---
import { PROJECTS } from "./Projects.astro";
import LinkButton from "./LinkButton.astro"
import GitHub from "./icons/GH.astro"

---
<section class="px-4 space-y-24 pt-64 max-lg:pt-60 max-lg:pb-40">
  <div class="max-w-lg mx-auto relative">

      <input id="article-01" type="radio" name="slider" class="sr-only peer/01">
      <input id="article-02" type="radio" name="slider" class="sr-only peer/02">
      <input id="article-03" type="radio" name="slider" class="sr-only peer/03" checked>
      <input id="article-04" type="radio" name="slider" class="sr-only peer/04">
      <input id="article-05" type="radio" name="slider" class="sr-only peer/05">
      <input id="article-06" type="radio" name="slider" class="sr-only peer/06">
      <input id="article-07" type="radio" name="slider" class="sr-only peer/07">

{PROJECTS.map((project) => (

      <div id="container-loop" class={project.section} >
      
          <label class="absolute inset-0" for={project.article_id}><span class="sr-only">Focus on the big picture</span></label>
          <article class="bg-white p-6 rounded-lg shadow-2xl">
              <header class="mb-12 transition duration-500 ease-in-out transform shadow-2xl shadow-gray-600 ">
                  <img class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={project.image}  alt="Icon" />
                  
              </header>
              <h3 class="text-2xl font-bold text-gray-800">
              {project.title}
            </h3>
              <div class="text-sm leading-relaxed text-slate-500 space-y-4 mb-2">
                  <p>
                    {project.description}
                  </p>
              </div>
              <ul class="flex flex-row mb-2 gap-x-2 pb-6 ">
                {project.tags.map((tag) => (
                  <li>
                    <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                      <tag.icon class="size-4" />
                      {tag.name}
                    </span>
                  </li>
                ))}
              </ul>

              <footer class="flex items-end justify-start mt-4 gap-x-4">
                {project.github && (
                  <LinkButton href={project.github}>
                    <GitHub class="size-6" />
                    Code
                  </LinkButton>
                )}
              </footer>
          </article>
      </div>
))}                
  </div>
</section>

