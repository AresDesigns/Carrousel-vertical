---
import Layout from '../layouts/Layout.astro';
import SectionContainer from "../components/SectionContainer.astro";
import TitleSection from "../components/TitleSection.astro";
import Briefcase from "../components/icons/Briefcase.astro"
import AboutMe from "../components/AboutMe.astro"
import CodeIcon from "../components/icons/Code.astro"
import Experience from "../components/Experience.astro"
import ProfileCheck from "../components/icons/ProfileCheck.astro"
import SectionOne from "../components/SectionOne.astro";
import Carrousel from "../components/Carrousel.astro";

---

<Layout title="Porfolio de sergio - Desarrollador y Programador Web con 5 años de experiencia"
	description='fdfd'
>
	<main class="w-full ">

		<SectionContainer id="inicio" class="pt-72 max-lg:pt-60 max-lg:pb-40 pb-80">
		<SectionOne class="w-full">
		</slot></SectionOne>
		</SectionContainer>

	
		
		<div class="px-4 space-y-24">

			
			<SectionContainer id="experiencia">
				<TitleSection>
				  <Briefcase class="size-7" />
