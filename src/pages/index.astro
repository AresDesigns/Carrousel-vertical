				</TitleSection>
				<Experience />
			  </SectionContainer>
			
			  <SectionContainer id="proyectos">
				<TitleSection>
				  <CodeIcon class="size-7" />
				  Proyectos
				</TitleSection>
				<Carrousel/>
			  </SectionContainer>
			  

			<!-- <SectionContainer id="proyectos">
			  <TitleSection>
				<CodeIcon class="size-7" />
